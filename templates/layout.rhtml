<!doctype html>
<html>
  <head>
    <link href='http://fonts.googleapis.com/css?family=Sanchez:400italic,400' rel='stylesheet' type='text/css'>
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.8.2/jquery.min.js"></script>
    <link rel="stylesheet" type="text/css" href="/css/screen.css">
    <link rel="alternate" type="application/atom+xml" title="<%= title %> - feed" href="/index.xml" />
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8"/> 
    <title><%= title %></title>
  </head>
  <body>
    <section role="main">
      <%= yield %> 
    </section>
    <footer>
    &copy; 2012 by Jared Davis. Contact via Twitter <a href="https://www.twitter.com/haiqus">@haiqus</a>. site powered by <a href="http://cloudhead.io/toto">toto</a>
    </footer>
    <script type="text/javascript">
      $(document).ready(function(){
        var wHeight = window.innerHeight,
            wWidth = window.innerWidth,
            path = window.location.pathname,
            arrival = document.referrer;

        $('body')
          .css("min-height", wHeight);
        $('section[role*="main"]')
          .css("min-height",wHeight - 60);
        $('#entrance blockquote')
          .css("top",wHeight / 8);
        $('#entrance a')
          .css("top", wHeight / 4)
          .css("font-size",wWidth / 24)
          .css("padding-top",wWidth / 24)
          .css("padding-bottom", wWidth / 24);
        $('#top-header').find("a[href*='"+path+"']")
          .css("opacity",1);

        if(arrival.match('http://haiq') == "null"){ $.post('http://arrivals.haiqus.com',arrival) }
         
      });
    </script>
  </body>
</html>

